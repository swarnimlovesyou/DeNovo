# DeNovo Environment Configuration Template  
# Copy this file to .env and update with your actual credentials

# Groq AI Configuration
# Production key for deployment: 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
GROQ_API_KEY=your_groq_api_key_here

# Supabase Configuration (Replace with your actual Supabase project details)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=localhost
FLASK_PORT=5000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# AI Model Configuration
# Available Groq models as of Dec 2024:
# - llama-3.3-70b-versatile (recommended, most capable)
# - llama-3.1-70b-versatile  
# - mixtral-8x7b-32768
# Note: llama3-8b-8192 has been decommissioned
AI_MODEL=llama-3.3-70b-versatile

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/drugtox_db

# AI Model Configuration
AI_MODEL=llama3-70b-8192
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1024

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/drugtox.log

# Security Configuration (for production)
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600